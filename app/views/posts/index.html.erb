<p id="notice"><%= notice %></p>

<%= link_to 'Write a Post', new_post_path, class:"btn btn-outline-success" %>
<br/><br/>
<h4>All Posts</h4>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Neighborhood</th>
      <th>Category</th>
      <th>Price</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.neighborhood %></td>
        <td><%= post.category %></td>
        <td><%= post.price %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>