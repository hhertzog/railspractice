<% if user_signed_in? %>

  <h4>Posts Matching My Keywords</h4>

	<table>
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>Neighborhood</th>
	      <th>Category</th>
	      <th>Price</th>
	      <th>Body</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>

	    <% @posts.each do |post| %>
		    <% @keywords.each do |keyword| %>

				<% if (current_user.id == keyword.user_id) && (current_user.id != post.user_id) && (post.body.include? keyword.word) %>
				  <tr>
				    <td><%= post.title %></td>
				    <td><%= post.neighborhood %></td>
				    <td><%= post.category %></td>
				    <td><%= post.price %></td>
				    <td><%= post.body %></td>
				    <td><%= link_to 'Show', post %></td>
				    <td><%= link_to 'Edit', edit_post_path(post) %></td>
				    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				  </tr>
				<% end %>

		      <% end %>
	      <% end %>

	  </tbody>
	</table>

<% end %>